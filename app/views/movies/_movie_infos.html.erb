 <div class="movie-card" data-controller="card" data-card-target="card">
  <%= image_tag movie.image_url %>

  <div class="movie-infos">
    <h2><%= movie.title %><small> (<%= movie.year %>)</small></h2>
    <button aria-label="Edit movie" data-action="click->card#btnVisible">
      <i class="fa-solid fa-pen fa-xs ml-2" data-card-target="btn"></i>
    </button>
  </div>

  <%= simple_form_for movie, html: {class: "d-none"}, 
  data: {card_target: "form", action: "submit->card#submitForm"} do |f| %>
    <%= f.input :title %>
    <%= f.input :year %>
    <%= f.submit "Update movie", class: "btn btn-sm btn-primary btn-block mt-2" %>
  <% end %>
</div>
